<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".myInfo.RegisterActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/register_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="注册"/>

    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/register_user_TIL"
        app:layout_constraintTop_toBottomOf="@id/register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/register_user_et"
            android:hint="请输入用户名"
            android:background="@drawable/et_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/register_passwd_TIL"
        app:layout_constraintTop_toBottomOf="@id/register_user_TIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/register_passwd_et"
            android:hint="请输入密码"
            android:background="@drawable/et_shape"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/register_insurePasswd_TIL"
        app:layout_constraintTop_toBottomOf="@id/register_passwd_TIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/register_insurePasswd_et"
            android:hint="请确认密码"
            android:background="@drawable/et_shape"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/register_email_TIL"
        app:layout_constraintTop_toBottomOf="@id/register_insurePasswd_TIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/register_email_et_"
            android:hint="请输入邮箱账号"
            android:background="@drawable/et_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/register_birthday_TIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/et_shape"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/register_email_TIL">

        <TextView
            android:id="@+id/register_birthday_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="出生日期" />

        <TextView
            android:id="@+id/register_birthday_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="" />

        <TextView
            android:id="@+id/register_birthday_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="" />
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/register_sex_TIL"
        app:layout_constraintTop_toBottomOf="@id/register_birthday_TIL"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/register_sex_tv"
            android:hint="性别"
            android:background="@drawable/et_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>



    <Button
        android:id="@+id/register_btn"
        android:layout_marginTop="20dp"
        android:shadowRadius="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_sex_TIL"
        android:text="注册"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>