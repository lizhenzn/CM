<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <!--<fragment
            android:id="@+id/friend_frag"
            android:name="com.example.cm.friend.fragment.FriendBtnFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#CECECE"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/session_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/editview"
                android:clickable="true"
                android:onClick="onClick"
                android:gravity="center"
                android:text="会话"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/contant_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/editview"
                android:clickable="true"
                android:onClick="onClick"
                android:gravity="center"
                android:text="好友"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/newFriend_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/editview"
                android:clickable="true"
                android:onClick="onClick"
                android:gravity="center"
                android:text="新朋友"
                android:textSize="18sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#CECECE"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPaper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <!--消息界面-->
        <ListView
            android:id="@+id/chat_lv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="true">
        </ListView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>