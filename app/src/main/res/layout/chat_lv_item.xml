<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:descendantFocusability="blocksDescendants"
    >


            <ImageView
                android:id="@+id/chat_iv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="6px"
                android:scaleType="centerCrop"
                android:focusable="false"
                android:src="@drawable/cm"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6px" />
            <TextView
                android:id="@+id/chat_XMtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/chat_iv"
                android:focusable="false"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"/>
            <TextView
                android:id="@+id/chat_Megtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:layout_below="@id/chat_XMtv"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/chat_iv"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:id="@+id/Meg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center"
                android:layout_alignParentRight="true"
                tools:ignore="NotSibling"
                />







</RelativeLayout>