<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hsv"
    android:layout_width="wrap_content"
    android:layout_height="36dp"
    android:descendantFocusability="blocksDescendants"
    android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/lv_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:focusable="false"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/chat_relativeL"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/chat_iv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="6px"
                android:focusable="false"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6px" />
            <TextView
                android:id="@+id/chat_XMtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/chat_iv"
                android:focusable="false"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"/>
            <TextView
                android:id="@+id/chat_Megtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/chat_iv"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:id="@+id/Meg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center"
                android:layout_alignParentRight="true"
                tools:ignore="NotSibling"
                />



        </RelativeLayout>

        <!---->

        <LinearLayout
            android:id="@+id/chat_ll4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false">

            <Button
                android:id="@+id/ZD_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="置顶" />

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:background="#FF0000"
                android:text="删除" />
        </LinearLayout>


    </LinearLayout>
</HorizontalScrollView>