<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="6dp"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/add_friendIM"
       android:layout_width="36dp"
       android:layout_height="36dp" />
    <TextView
        android:id="@+id/add_friendNM"
        android:text="姓名"
        android:layout_toRightOf="@id/add_friendIM"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/add_friendReason"
        android:text="原因"
        android:layout_toRightOf="@id/add_friendIM"
        android:layout_marginLeft="6dp"
        android:layout_below="@id/add_friendNM"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/add_friend_acceptBtn"
        android:text="接受"
        android:background="@drawable/button"
        android:layout_toLeftOf="@id/add_friend_rejectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/add_friend_rejectBtn"
        android:text="拒绝"
        android:background="@drawable/button_reject"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/add_friend_resultTV"
        android:text="邀请结果"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>